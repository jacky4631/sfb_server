        <!--weixinpay-->
        <dependency>
            <groupId>com.mailvor</groupId>
            <artifactId>mshop-mp</artifactId>
            <version>3.3</version>
            <exclusions>
                <exclusion>
                    <groupId>org.springframework.boot</groupId>
                    <artifactId>spring-boot-starter-security</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>org.springframework.security</groupId>
